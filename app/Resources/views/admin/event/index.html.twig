{% extends 'admin/datatable_layout.html.twig' %}
{% block content %}
    <div class="panel">
        <div class="panel-heading">
            <div class="panel-title">
                {{ 'admin.event.title'|trans }}
                <a href="{{ path('admin_event_add') }}" class="btn btn-info add-btn"
                   title="{{ 'common.button.add'|trans }}">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
        </div>
        <div class="panel-body">
            <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"
                   width="100%">
                <thead>
                <tr>
                    <th>{{ 'common.data_table.id'|trans }}</th>
                    <th>{{ 'admin.event.title'|trans }}</th>
                    <th>{{ 'admin.event.date'|trans }}</th>
                    <th>{{ 'admin.event.location'|trans }}</th>
                    <th>{{ 'admin.event.event_type'|trans }}</th>
                    <th>{{ 'common.data_table.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.id }}</td>
                        <td>{{ event.name }}</td>
                        <td>{{ event.date|date("d-m-y H:i") }}</td>
                        <td>{{ event.location }}</td>
                        <td>{{ event.eventType.name }}</td>
                        <td class="column-actions">
                            <div class="btn-group" role="group" aria-label="...">
                                <a href="{{ path('admin_event_edit', {'slug':event.slug}) }}"
                                   class="btn btn-info" title="{{ 'common.button.edit'|trans }}">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="{{ path('admin_event_delete', {'slug':event.slug}) }}"
                                   class="btn btn-danger"
                                   onclick="return confirm('{{ 'admin.event.delete_confirm'|trans }}')"
                                   title="{{ 'common.button.delete'|trans }}">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
