<table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"
       width="100%">
    <thead>
    <tr>
        <th>{{ 'common.data_table.id'|trans }}</th>
        <th>{{ 'admin.booking.user.name'|trans }}</th>
        <th>{{ 'admin.booking.user.email'|trans }}</th>
        <th>{{ 'admin.booking.ticketCategory.label'|trans }}</th>
        <th>{{ 'common.data_table.actions'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for booking in bookings %}
        <tr>
            <td>{{ booking.id }}</td>
            <td>{{ booking.mainUser.fullName }}</td>
            <td>{{ booking.mainUser.email }}</td>
            <td>{{ booking.ticketCategory.label }}</td>
            <td class="column-actions-booking">
                <div class="btn-group" role="group" aria-label="...">
                    <a href="{{ path('admin_booking_edit', {'id': booking.id}) }}"
                       class="btn btn-info" title="{{ 'common.button.edit'|trans }}">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="{{ path('admin_booking_export', {'id': booking.id}) }}" class="btn btn-primary"
                       title="{{ 'common.button.export'|trans }}">
                        <i class="fa fa-file-excel-o"></i>
                    </a>
                    <a href="{{ path('admin_booking_delete', {'booking':booking.id}) }}"
                       class="btn btn-danger"
                       onclick="return confirm('{{ 'admin.booking.delete_confirm'|trans }}')"
                       title="{{ 'common.button.delete'|trans }}">
                        <i class="fa fa-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
