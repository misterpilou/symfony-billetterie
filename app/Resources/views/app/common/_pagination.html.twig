{% if pageCount > 1 %}
    <ul class="pagination pagination-lg">
        {% include 'app/common/pagination/_previous.twig' %}
        {% for page in pagesInRange %}
            {% if page != current %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </li>
            {% else %}
                <li class="active">
                    <span>{{ page }}</span>
                </li>
            {% endif %}
        {% endfor %}
        {% include 'app/common/pagination/_next.twig' %}
    </ul>
{% endif %}
