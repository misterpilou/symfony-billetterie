{% extends "app/layout.html.twig" %}

{% block content %}
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div class="panel col-md-6 col-md-offset-3">
            <div class="panel-heading">
                <div class="panel-title">{{ 'app.user.resetting.title'|trans }}</div>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label for="username" class="control-label required">
                        {{ 'app.user.resetting.request.username'|trans }}
                    </label>
                    <input type="text" id="username" name="username" class="form-control"
                           required="required"/>
                </div>
            </div>
            <div class="panel-footer text-center">
                <input type="submit" class="btn btn-success" value="{{ 'app.user.resetting.request.submit'|trans }}"/>
            </div>
        </div>
    </form>
{% endblock content %}
