{% extends "app/layout.html.twig" %}

{% block content %}
    <div class="panel col-md-6 col-md-offset-3">
        <div class="panel-heading">
            <div class="panel-title">{{ 'app.user.register.title'|trans }}</div>
        </div>
        <div class="panel-body">
            <p>{{ 'app.user.register.confirmed'|trans({'%username%': user.username}) }}</p>
        </div>
        <div class="panel-footer text-center">
            {% if targetUrl %}
                <a href="{{ targetUrl }}" class="btn btn-success">{{ 'app.user.register.back'|trans }}</a>
            {% endif %}
        </div>
    </div>
{% endblock content %}
