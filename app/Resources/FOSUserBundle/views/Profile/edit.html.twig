{% extends "app/form.html.twig" %}

{% block content %}
    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
    <div class="panel">
        <div class="panel-heading">
            <div class="panel-title">{{ 'app.user.profile.edit.title'|trans }}</div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.civility) }}
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.lastName) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.firstName) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.birthdayDate) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.idNumber) }}
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.address) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.city) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.zipCode) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.phone) }}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-xs-6 text-left">
                    <span>{{ 'common.obligatory_fields'|trans }}</span>
                </div>
                <div class="col-xs-6 text-right">
                    <input type="submit" class="btn btn-success" id="_submit" name="_submit"
                           value="{{ 'common.button.save'|trans }}"/>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock content %}
